                                <!-- -->
                                <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Margin="-4,3" Height="3"
                                        Background="#D5DFE5" BorderThickness="0,1" BorderBrush="White" />
                                <!-- -->
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Iris Shape:" />
                                <ContentControl Grid.Row="5" Grid.Column="1"
                                                code:CharAttributeHelper.Attribute="{Binding Path=IrisShape.Key}" />
                                <TextBlock Grid.Row="5" Grid.Column="2" Text="Eyes Color:" />
                                <Grid Grid.Row="5" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <ContentControl Grid.Column="0" Margin="0,0,2,0" VerticalAlignment="Center"
                                                    code:CharAttributeHelper.Attribute="{Binding Path=LeftEyeColor.Key}" />
                                    <ContentControl Grid.Column="1" Margin="2,0,0,0" VerticalAlignment="Center"
                                                    code:CharAttributeHelper.Attribute="{Binding Path=RightEyeColor.Key}" />
                                </Grid>
                                <!-- -->
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Iris:" />
                                <ContentControl Grid.Row="6" Grid.Column="1"
                                                code:CharAttributeHelper.Attribute="{Binding Path=IrisType.Key}" />
                                <TextBlock Grid.Row="6" Grid.Column="2" Text="Highlight:" />
                                <ContentControl Grid.Row="6" Grid.Column="3"
                                                code:CharAttributeHelper.Attribute="{Binding Path=EyeHighlightType.Key}" />
                                <!-- -->
                                <ToggleButton Grid.Row="7" Grid.Column="0" Content="Ext. Iris" Padding="3,0"
                                              Margin="3,0" VerticalAlignment="Center"
                                              IsChecked="{Binding Path=ExternalIrisTexture.Value}" />
                                <ComboBox x:Name="IrisCombo" Grid.Row="7" Grid.Column="1" VerticalAlignment="Center"
                                          Margin="5,0,0,0" IsEditable="True" DisplayMemberPath="Name"
                                          IsSynchronizedWithCurrentItem="True"
                                          ItemsSource="{Binding Path=TextureWatcher[eye]}"
                                          ItemContainerStyle="{StaticResource TextureComboItem}" />
                                <ToggleButton Grid.Row="7" Grid.Column="2" Content="Ext. Highlight" Padding="3,0"
                                              Margin="3,0" VerticalAlignment="Center"
                                              IsChecked="{Binding Path=ExternalHighlightTexture.Value}" />
                                <ComboBox x:Name="HighlightCombo" Grid.Row="7" Grid.Column="3"
                                          VerticalAlignment="Center" Margin="5,0,0,0" IsEditable="True"
                                          DisplayMemberPath="Name" IsSynchronizedWithCurrentItem="True"
                                          ItemsSource="{Binding Path=TextureWatcher[hilight]}"
                                          ItemContainerStyle="{StaticResource TextureComboItem}" />

                            </Grid>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>